{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@internal/modules": [
                "src/app/lazy-loaders"
            ],
            "cloud-identity": [
                "projects/cloud-identity/src"
            ],
            "cloud-deed": [
                "projects/cloud-deed/src"
            ],
            "cloud-core": [
                "projects/cloud-core/src"
            ],
            "cloud-shared": [
                "projects/cloud-shared/src"
            ]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}